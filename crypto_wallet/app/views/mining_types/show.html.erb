<section class="container card mt-4">
  <div class="card-header">
    <h3 class="text-secondary"><%= I18n.t("mining") %></h3>
  </div>
  <div class="card-body">
    <p>
      <strong><%= MiningType.human_attribute_name(:description) %></strong>
      <%= @mining_type.description %>
    </p>

    <p>
      <strong><%= MiningType.human_attribute_name(:acronym) %></strong>
      <%= @mining_type.acronym %>
    </p>

    <div>
      <%= link_to I18n.t("links.edit"), edit_mining_type_path(@mining_type), class: "btn btn-primary" %>
      <%= link_to I18n.t("links.back"), mining_types_path, class: "btn btn-secondary" %>
    </div>
  </div>
</section>

