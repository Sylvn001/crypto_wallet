<section id="mining" class="container bg-light mt-4 rounded p-4">
  <h1 class="text-dark mt-2"><%= I18n.t("mining") %></h1>
  <strong class="text-primary mb-2">Data: <%= br_date(Date.today) %> </strong>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th><%= MiningType.human_attribute_name(:description) %></th>
        <th><%= MiningType.human_attribute_name(:acronym) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mining_types.each do |mining_type| %>
        <tr>
          <td><%= mining_type.description %></td>
          <td><%= mining_type.acronym %></td>
          <td><%= link_to I18n.t('links.show'), mining_type %></td>
          <td><%= link_to I18n.t('links.edit'), edit_mining_type_path(mining_type) %></td>
          <td><%= link_to I18n.t('links.delete'), mining_type, method: :delete, data: { confirm: I18n.t('confirm')  } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to I18n.t('new_mining_type'), new_mining_type_path, class: "btn btn-primary" %>
</section>