<section class="container card p-4 mt-4">
  <div class="card-header">
    <h1 class="card-title text-secondary "><%= I18n.t("coins") %> </h1>
  </div>
  <div class="card-body bg-">
    <%= form_with(model: coin, class: "") do |form| %>
      <% if coin.errors.any? %>
        <div id="error_explanation" class="bg-danger p-2 rounded mb-2">
          <h2 class="text-light"><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

          <ul>
            <% coin.errors.each do |error| %>
              <li class="text-light"><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-group col-6 mb-3">
        <%= form.label :description, class: "mr-2" %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="input-group col-6 mb-3">
        <%= form.label :acronym, class: "mr-2" %>
        <%= form.text_field :acronym, class: "form-control" %>
      </div>

      <div class="input-group col-6 mb-3">
        <%= form.label :url_image, class: "mr-2" %>
        <%= form.text_field :url_image, class: "form-control" %>
      </div>

      <div class="input-group col-6 mb-3">
        <%= form.label :mining_type_id, class: "mr-2"  %>
        <%= form.select("mining_type_id", @mining_type_options, {include_blank: true}, class:"custom-select"  )  %>
      </div>

      <div class="actions">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to 'Back', coins_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</section>

